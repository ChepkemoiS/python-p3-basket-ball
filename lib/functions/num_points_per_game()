def num_points_per_game(player_name):
    """
    Returns the number of points per game for the given player.

    Args:
        player_name (str): The name of the player.

    Returns:
        float: The number of points per game for the given player.
    """
    # Initialize the dictionary of points per game for each player
    points_per_game = {
        "Jarrett Allen": 16.1,
        "Darius Garland": 21.7,
        "Evan Mobley": 15.0,
        "Kevin Love": 13.6,
        "Isaac Okoro": 8.8,
        "Ricky Rubio": 13.1,
        "Bradley Beal": 23.2,
        "Kyle Kuzma": 17.1,
        "Kentavious Caldwell-Pope": 13.1,
        "Davis Bertans": 5.6,
        "Kristaps Porzingis": 22.1,
        "Rui Hachimura": 11.3,
    }

    # Return the number of points per game for the given player
    return points_per_game.get(player_name, "Player not found")